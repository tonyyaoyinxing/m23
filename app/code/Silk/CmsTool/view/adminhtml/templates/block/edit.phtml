    <div class="modal-inner-content">
        <h2>Modal Title</h2>
        <p>Modal content.....</p>
        <input class="admin__control-text" type="text" id="width" name="width" maxlength="255">
        <input class="admin__control-text" type="text" id="height" name="height" maxlength="255">
