<script>
    require(
        [
            'jquery',
            'Magento_Ui/js/modal/modal',
            'popupWindow'
        ],
        function($, modal) {
            var options = {
                type: 'popup',
                responsive: true,
                innerScroll: true,
                title: 'Create Block',
                buttons: [{
                    text: $.mage.__('Close'),
                    class: 'modal-close',
                    click: function (){
                        this.closeModal();
                    }
                },{
                    text: $.mage.__('Create'),
                    class: 'modal-add',
                    click: function (){
                        $("#add-block").click();
                        this.closeModal();
                    }
                }]
            };
            modal(options, $('#modal-content'));
            $("#modal-btn").on('click',function(){
                $("#modal-content").modal("openModal");
            });
            $("#add-block").popupWindow({
                "windowURL": "<?= $block->getDrawUrl() ?>",
                "windowName": "Draw Block",
                "width": $('#width').val(),
                "height": $('#height').val(),
                "left": 0,
                "top": 0,
                "resizable": 1,
                "scrollbars": 1
            });
        }
    );
</script>