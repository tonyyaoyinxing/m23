<?xml version="1.0" encoding="UTF-8" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">silk_cmstool_block_form.data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Block</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Silk\CmsTool\Block\Adminhtml\Edit\Button\Back"/>
            <button name="delete" class="Silk\CmsTool\Block\Adminhtml\Edit\Button\Block\Delete"/>
            <button name="reset" class="Silk\CmsTool\Block\Adminhtml\Edit\Button\Reset"/>
            <button name="save" class="Silk\CmsTool\Block\Adminhtml\Edit\Button\Block\Save"/>
            <button name="draw" class="Silk\CmsTool\Block\Adminhtml\Edit\Button\Preview"/>
        </buttons>
        <namespace>silk_cmstool_block_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>silk_cmstool_block_form.data_source</dep>
        </deps>
    </settings>
    <dataSource name="data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="cmstool/block/save"/>
        </settings>
        <dataProvider class="Silk\CmsTool\Ui\DataProvider\Block\Form\BlockDataProvider" name="data_source">
            <settings>
                <requestFieldName>block_id</requestFieldName>
                <primaryFieldName>block_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">General information</label>
        </settings>
        <field name="block_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>block_id</dataScope>
            </settings>
        </field>
        <field name="is_active" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable block</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Block Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>
    </fieldset>
    <modal name="cmstool_block_preview_modal">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="onCancel" xsi:type="string">actionCancel</item>
                <item name="options" xsi:type="array">
                    <item name="buttons" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="text" xsi:type="string">Cancel</item>
                            <item name="class" xsi:type="string">action-secondary</item>
                            <item name="actions" xsi:type="array">
                                <item name="0" xsi:type="string">actionCancel</item>
                            </item>
                        </item>
                        <item name="1" xsi:type="array">
                            <item name="text" xsi:type="string">Import</item>
                            <item name="class" xsi:type="string">action-primary</item>
                            <item name="actions" xsi:type="array">
                                <item name="0" xsi:type="string">actionImport</item>
                            </item>
                        </item>
                    </item>
                </item>
            </item>
        </argument>
        <fieldset name="general">
            <settings>
                <label>Import from categories tree</label>
            </settings>
            <field name="category_id" formElement="select">
                <settings>
                    <dataType>int</dataType>
                    <label translate="true">Root Category</label>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Snowdog\Menu\Ui\Component\Menu\Form\Element\Categories"/>
                        </settings>
                    </select>
                </formElements>
            </field>
            <field name="depth" formElement="input">
                <settings>
                    <dataType>int</dataType>
                    <label translate="true">Level of depth</label>
                    <notice translate="true">Leave 0 for all child categories</notice>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
    </modal>
    <fieldset name="main" sortOrder="20">
        <settings>
            <label translate="true">Main information</label>
        </settings>
    </fieldset>
</form>
